@using NgoExpoApp.App_Code
<div class="col-xl-6 col-xxl-5 d-flex">
    <div class="w-100">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Posts</h5>
                        <h1 class="mt-1 mb-3">
                            @PostsHelpers.GetTotalPosts().ToString("N0")
                        </h1>
                        <div class="mb-1">
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Visitors</h5>
                        <h1 class="mt-1 mb-3">
                            @Helpers.GetTotalVisits().ToString("N0")
                        </h1>
                        <div class="mb-1">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Users</h5>
                        <h1 class="mt-1 mb-3">
                            @ProfileHelpers.GetTotalUsers().ToString("N0")
                        </h1>
                        <div class="mb-1">
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Pages</h5>
                        <h1 class="mt-1 mb-3">
                            @PagesHelpers.GetTotalPages().ToString("N0")
                        </h1>
                        <div class="mb-1">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>