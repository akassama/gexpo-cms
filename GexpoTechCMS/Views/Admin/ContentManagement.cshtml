@using NgoExpoApp.App_Code

@{
    ViewData["Title"] = "Content Management";

    //used to enable admin sidebar
    ViewBag.LoggedInPage = "true";

    //used for setting breadcrumb
    ViewData["BreadCrumb-0"] = null;
    ViewData["BreadCrumb-0-Text"] = null;
    ViewData["BreadCrumb-1"] = null;
    ViewData["BreadCrumb-1-Text"] = null;

    //used for setting active left sidebar
    ViewBag.ActiveTab = "ContentManagement";
}

<div class="container-fluid p-0">

    <!-- ADMIN SCRIPTS -->
    <partial name="~/Views/Shared/AccountLayout/_AdminScript.cshtml" />

    <!-- SEARCH RESULT DIV -->
    <partial name="~/Views/Shared/AccountLayout/_AdminSearchList.cshtml" />

    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3><strong>Content Management</strong></h3>
        </div>

        <!-- BREADCRUMB RECENT VISITS -->
        <partial name="~/Views/Shared/AccountLayout/_Breadcrumbs.cshtml" />
    </div>

    <!-- Action messages partial -->
    <partial name="~/Views/Shared/_ProcessMessage.cshtml" />


    <div class="row">
        <div class="col-md-3 col-xl-2">

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">CMS Settings</h5>
                </div>

                <div class="list-group list-group-flush" role="tablist">
                    <a class="list-group-item list-group-item-action active" data-toggle="list" href="#organization" role="tab">
                        Organization
                    </a>
                    <a class="list-group-item list-group-item-action page-sections" data-toggle="list" href="#page-sections" role="tab">
                        Page Sections
                    </a>
                    <a class="list-group-item list-group-item-action social" data-toggle="list" href="#social" role="tab">
                        Social Media
                    </a>
                    <a class="list-group-item list-group-item-action service-stat" data-toggle="list" href="#service-stat" role="tab">
                        Service Stats
                    </a>
                    <a class="list-group-item list-group-item-action about-info" data-toggle="list" href="#about-info" role="tab">
                        About Info
                    </a>
                    <a class="list-group-item list-group-item-action donations" data-toggle="list" href="#donations" role="tab">
                        Donations
                    </a>
                    <a class="list-group-item list-group-item-action resources" data-toggle="list" href="#resources" role="tab">
                        Resource Documents
                    </a>
                    <a class="list-group-item list-group-item-action videos" data-toggle="list" href="#videos" role="tab">
                        Videos
                    </a>
                    <a class="list-group-item list-group-item-action header-text" data-toggle="list" href="#header-text" role="tab">
                        Header Text
                    </a>
                    <a class="list-group-item list-group-item-action content-display" data-toggle="list" href="#content-display" role="tab">
                        Content Display
                    </a>
                    <a class="list-group-item list-group-item-action seo" data-toggle="list" href="#seo" role="tab">
                        SEO
                    </a>
                    <a class="list-group-item list-group-item-action seo" asp-action="ManageTranslations" asp-controller="Admin" role="tab">
                        Manage Translations
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9 col-xl-10">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="organization" role="tabpanel">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Organization Info</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="UpdateOrganizationInfo" asp-controller="Admin" method="post" class="g-3 needs-validation" novalidate enctype="multipart/form-data">
                                @{
                                    //get input values
                                    string OrganizationName = SqlHelpers.GetTableData("ContentManagement", "ContentName", "OrganizationName", "ContentValue");
                                    string OrganizationAddress = SqlHelpers.GetTableData("ContentManagement", "ContentName", "OrganizationAddress", "ContentValue");
                                    string PhoneNumber = SqlHelpers.GetTableData("ContentManagement", "ContentName", "PhoneNumber", "ContentValue");
                                    string OptionalPhoneNumber = SqlHelpers.GetTableData("ContentManagement", "ContentName", "OptionalPhoneNumber", "ContentValue");
                                    string Email = SqlHelpers.GetTableData("ContentManagement", "ContentName", "Email", "ContentValue");
                                    string Logo = CMSHelpers.GetCmsData("Logo");
                                    Logo = (!string.IsNullOrEmpty(Logo)) ? "/images/" + Logo : "https://via.placeholder.com/300x175?text=Logo+Preview";
                                    string LogoFormat = SqlHelpers.GetTableData("ContentManagement", "ContentName", "LogoFormat", "ContentValue");
                                    string LogoWidth = SqlHelpers.GetTableData("ContentManagement", "ContentName", "LogoWidth", "ContentValue");
                                    string Favicon = CMSHelpers.GetCmsData("Favicon");
                                    Favicon = (!string.IsNullOrEmpty(Favicon)) ? "/images/" + Favicon : "https://via.placeholder.com/35x35?text=IC";
                                }
                                <div class="mb-3">
                                    <label class="form-label" for="OrganizationName" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's name">
                                        Name
                                        @*
                                <a asp-action="AddDataTranslation" asp-controller="Admin" asp-route-key="@SqlHelpers.GetTableData("ContentManagement", "ContentName", "OrganizationName", "ContentID")" asp-route-key-name="ContentID" asp-route-model="ContentManagement" asp-route-title="ContentName"
                                   asp-route-desc="" asp-route-cont="" asp-route-view="ContentManagement" class="text-decoration-none text-info float-right">
                                    <i class="align-middle" data-feather="globe"></i>
                                </a>
                                        *@
                                    </label>
                                    <input type="text" class="form-control count-reach" name="OrganizationName" id="OrganizationName" maxlength="250" data-chars-max="250" data-msg-color="danger" value="@OrganizationName" required="">
                                    <div class="invalid-feedback">
                                        Please provide name.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="OrganizationAddress" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's address">
                                        Address
                                    </label>
                                    <input type="text" class="form-control count-reach" name="OrganizationAddress" id="OrganizationAddress" maxlength="500" data-chars-max="500" data-msg-color="danger" value="@OrganizationAddress" required="">
                                    <div class="invalid-feedback">
                                        Please provide an address.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="PhoneNumber" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's phone number">
                                        Primary Phone Number
                                    </label>
                                    <input type="text" class="form-control count-reach" name="PhoneNumber" id="PhoneNumber" maxlength="20" data-chars-max="20" data-msg-color="danger" value="@PhoneNumber" required="">
                                    <div class="invalid-feedback">
                                        Please provide phone number.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="OptionalPhoneNumber" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your optional phone number">
                                        Optional Phone Number
                                    </label>
                                    <input type="text" class="form-control count-reach" name="OptionalPhoneNumber" id="OptionalPhoneNumber" maxlength="20" data-chars-max="20" data-msg-color="danger" value="@OptionalPhoneNumber">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="Email" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's email">
                                        Email
                                    </label>
                                    <input type="email" class="form-control count-reach" name="Email" id="Email" maxlength="100" data-chars-max="100" data-msg-color="danger" value="@Email" required="">
                                    <div class="invalid-feedback">
                                        Please provide an email.
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="mb-3">
                                            <label class="form-label w-100" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's logo">
                                                Logo
                                            </label>
                                            <input type="file" class="form-control accept-imgs upload-file-select" name="Logo" id="Logo">
                                            <small class="form-text text-muted">Max size 5mb.</small>
                                            <div class="invalid-feedback">
                                                Please provide logo.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 file-preview-div mt-1">
                                        <img src="@Logo" height="175" class="img-thumbnail img-fluid file-preview" alt="logo image preview">
                                        <small>
                                            <span class="text-danger text-left file-preview-name"></span>
                                        </small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3 col-md-12">
                                        <label class="form-label" for="LogoFormat" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Set display format">
                                            Logo Display Format
                                        </label>
                                        <select name="LogoFormat" id="LogoFormat" class="form-control">
                                            <option>Select format</option>
                                            <option value="1" selected="@((LogoFormat == "1") ? "selected" : ""))">Rectangle</option>
                                            <option value="2" selected="@((LogoFormat == "2") ? "selected" : ""))">Square</option>
                                            <option value="3" selected="@((LogoFormat == "3") ? "selected" : ""))">Circle</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3 col-md-12">
                                        <label class="form-label" for="LogoWidth" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Set logo width. For rectanglar format, height is half width.">
                                            Logo Width (px)
                                        </label>
                                        <select name="LogoWidth" id="LogoWidth" class="form-control">
                                            <option>Select width</option>
                                            <option value="50" selected="@((LogoWidth == "50") ? "selected" : ""))">50</option>
                                            <option value="75" selected="@((LogoWidth == "75") ? "selected" : ""))">75</option>
                                            <option value="100" selected="@((LogoWidth == "100") ? "selected" : ""))">100</option>
                                            <option value="125" selected="@((LogoWidth == "125") ? "selected" : ""))">125</option>
                                            <option value="150" selected="@((LogoWidth == "150") ? "selected" : ""))">150</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label w-100" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's favicon">
                                        Favicon <img src="@Favicon" class="rounded border border-light ml-1 favicon-preview" alt="favicon" width="35" height="35">
                                    </label>
                                    <input type="file" class="form-control preview-input accept-imgs" data-preview-class="favicon-preview" name="Favicon" id="Favicon">
                                    <small class="form-text text-muted">Select image file. 5mb max</small>
                                    <div class="invalid-feedback">
                                        Please provide a favicon.
                                    </div>
                                </div>
                                <br />
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="page-sections" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title mb-0">Page Sections</h5>
                            <div class="row">
                                <div class="mb-4 col-md-12">
                                    <a href="#addPageSectionodal" class="btn btn-outline-primary float-right" data-bs-toggle="modal" data-bs-target="#addPageSectionodal">
                                        <i class="align-middle" data-feather="plus"></i>
                                        Add Page Section
                                    </a>
                                </div>
                                <div class="mb-3 col-md-12">
                                    @if (ViewBag.PageSectionsCount > 0)
                                    {
                                        <table class="table dataTable">
                                            <thead>
                                                <tr>
                                                    <th>Section Order</th>
                                                    <th>Title</th>
                                                    <th>Section Content</th>
                                                    <th class="d-none d-md-table-cell">Created At</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var sect_data in ViewBag.PageSectionsData)
                                                {
                                                    <tr>
                                                        <td>
                                                            @sect_data.SectionOrder
                                                        </td>
                                                        <td>
                                                            @sect_data.SectionTitle
                                                        </td>
                                                        <td>
                                                            @Helpers.FormatLongText(Helpers.StripHTML(sect_data.SectionContent), 150)
                                                        </td>
                                                        <td class="d-none d-md-table-cell">
                                                            @Helpers.FormatDate(sect_data.CreatedAt.ToString())
                                                        </td>
                                                        <td class="table-action">
                                                            @if (sect_data.SectionType != "Default")
                                                            {
                                                                <a class="text-decoration-none text-primary" asp-action="EditPageSection" asp-controller="Admin" asp-route-id="@sect_data.SectionID">
                                                                    <i class="align-middle" data-feather="edit-2"></i>
                                                                </a>
                                                                <a class="text-decoration-none text-danger delete-record" data-title="Delete Section" data-label="Page Section" data-key="@sect_data.SectionID"
                                                                   data-action="/Admin/DeleteRecord" data-model="PageSections" data-view="ContentManagement" data-route-id="">
                                                                    <i class="align-middle" data-feather="trash"></i>
                                                                </a>
                                                                <a asp-action="AddDataTranslation" asp-controller="Admin" asp-route-key="@sect_data.SectionID" asp-route-key-name="SectionID" asp-route-model="PageSections" asp-route-title="SectionTitle"
                                                                   asp-route-desc="" asp-route-cont="SectionContent" asp-route-view="ContentManagement" class="text-decoration-none text-info">
                                                                    <i class="align-middle" data-feather="globe"></i>
                                                                </a>
                                                            }
                                                            else if (sect_data.SectionType == "Default" && sect_data.SectionName != "HomeSliders")
                                                            {
                                                                <a class="text-decoration-none text-primary" asp-action="EditPageSection" asp-controller="Admin" asp-route-id="@sect_data.SectionID">
                                                                    <i class="align-middle" data-feather="edit-2"></i>
                                                                </a>
                                                                <a class="text-decoration-none text-danger disabled">
                                                                    <i class="align-middle" data-feather="minus"></i>
                                                                </a>
                                                                <a class="text-decoration-none text-danger disabled">
                                                                    <i class="align-middle" data-feather="minus"></i>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a class="text-decoration-none text-danger disabled">
                                                                    <i class="align-middle" data-feather="minus"></i>
                                                                </a>
                                                                <a class="text-decoration-none text-danger disabled">
                                                                    <i class="align-middle" data-feather="minus"></i>
                                                                </a>
                                                                <a class="text-decoration-none text-danger disabled">
                                                                    <i class="align-middle" data-feather="minus"></i>
                                                                </a>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        @*<hr />
                                <h5 class="card-title mb-0">Section Order</h5>
                                <table class="table dataTable">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th class="d-none d-md-table-cell">Order</th>
                                            <th class="d-none d-md-table-cell">Created At</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var sect in ViewBag.PageSectionsData)
                                        {
                                            <tr>
                                                <td>
                                                    @sect.SectionTitle
                                                </td>
                                                <td class="d-none d-md-table-cell">
                                                    @sect.SectionOrder
                                                </td>
                                                <td class="d-none d-md-table-cell">
                                                    @Helpers.FormatDate(sect.CreatedAt.ToString())
                                                </td>
                                                <td class="table-action">
                                                    <a class="text-decoration-none text-primary">
                                                        <i class="align-middle" data-feather="edit-2"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>*@
                                    }
                                    else
                                    {
                                        <div class="alert alert-primary alert-dismissible" role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            <div class="alert-message">
                                                <strong>No service stat added</strong>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="social" role="tabpanel">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Social info</h5>
                        </div>
                        <div class="card-body">
                            @{
                                //get input values
                                string FacebookLink = SqlHelpers.GetTableData("ContentManagement", "ContentName", "FacebookLink", "ContentValue");
                                string TwitterLink = SqlHelpers.GetTableData("ContentManagement", "ContentName", "TwitterLink", "ContentValue");
                                string InstagramLink = SqlHelpers.GetTableData("ContentManagement", "ContentName", "InstagramLink", "ContentValue");
                                string YouTubeLink = SqlHelpers.GetTableData("ContentManagement", "ContentName", "YouTubeLink", "ContentValue");
                                string LinkedInLink = SqlHelpers.GetTableData("ContentManagement", "ContentName", "LinkedInLink", "ContentValue");
                            }
                            <form asp-action="UpdateSocialInfo" asp-controller="Admin" method="post" class="g-3 needs-validation" novalidate>
                                <div class="mb-3">
                                    <label class="form-label" for="FacebookLink" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's facebook link">
                                        Facebook Link
                                    </label>
                                    <input type="text" class="form-control count-reach" name="FacebookLink" id="FacebookLink" maxlength="250" data-chars-max="250" data-msg-color="danger" value="@FacebookLink">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="TwitterLink" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your twitter's facebook link">
                                        Twitter Link
                                    </label>
                                    <input type="text" class="form-control count-reach" name="TwitterLink" id="TwitterLink" maxlength="250" data-chars-max="250" data-msg-color="danger" value="@TwitterLink">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="InstagramLink" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's instagram link">
                                        Instagram Link
                                    </label>
                                    <input type="text" class="form-control count-reach" name="InstagramLink" id="InstagramLink" maxlength="250" data-chars-max="250" data-msg-color="danger" value="@InstagramLink">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="YouTubeLink" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's youtube link">
                                        YouTube Link
                                    </label>
                                    <input type="text" class="form-control count-reach" name="YouTubeLink" id="YouTubeLink" maxlength="250" data-chars-max="250" data-msg-color="danger" value="@YouTubeLink">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="LinkedInLink" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide your organization's linkedin link">
                                        LinkedIn Link
                                    </label>
                                    <input type="text" class="form-control count-reach" name="LinkedInLink" id="LinkedInLink" maxlength="250" data-chars-max="250" data-msg-color="danger" value="@LinkedInLink">
                                </div>
                                <br />

                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="service-stat" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Service Statistics</h5>
                            <div class="row">
                                <div class="mb-4 col-md-12">
                                    <a href="#ServiceStatForm" class="btn btn-outline-primary smooth-scroll clear-category-form float-right">
                                        <i class="align-middle" data-feather="plus"></i>
                                        Add Service Stat
                                    </a>
                                </div>
                                <div class="mb-3 col-md-12">
                                    @if (ViewBag.ServiceStatsCount > 0)
                                    {
                                        <table class="table dataTable">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Stat Value</th>
                                                    <th>Icon</th>
                                                    <th>Link (Find out more)</th>
                                                    <th class="d-none d-md-table-cell">Order</th>
                                                    <th>Status</th>
                                                    <th class="d-none d-md-table-cell">Created At</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var stat in ViewBag.ServiceStatsData)
                                                {
                                                    <tr>
                                                        <td>
                                                            @stat.Title
                                                        </td>
                                                        <td>
                                                            @stat.StatValue
                                                        </td>
                                                        <td>
                                                            @stat.Icon
                                                            <br />
                                                            <i class="@stat.Icon"></i>
                                                        </td>
                                                        <td>
                                                            @stat.Link
                                                        </td>
                                                        <td class="d-none d-md-table-cell">
                                                            @stat.Order
                                                        </td>
                                                        <td>
                                                            @Helpers.FormatStatus(stat.Status.ToString())
                                                        </td>
                                                        <td class="d-none d-md-table-cell">
                                                            @Helpers.FormatDate(stat.CreatedAt.ToString())
                                                        </td>
                                                        <td class="table-action">
                                                            <a class="text-decoration-none text-primary edit-service-stat" data-id="@stat.ServiceStatID" data-title="@stat.Title"
                                                               data-stat-value="@stat.StatValue" data-link="@stat.Link" data-icon="@stat.Icon" data-order="@stat.Order" data-status="@stat.Status">
                                                                <i class="align-middle" data-feather="edit-2"></i>
                                                            </a>
                                                            <a class="text-decoration-none text-danger delete-record" data-title="Delete Stat" data-label="Service Stat" data-key="@stat.ServiceStatID"
                                                               data-action="/Admin/DeleteRecord" data-model="ServiceStats" data-view="ContentManagement" data-route-id="">
                                                                <i class="align-middle" data-feather="trash"></i>
                                                            </a>
                                                            <a asp-action="AddDataTranslation" asp-controller="Admin" asp-route-key="@stat.ServiceStatID" asp-route-key-name="ServiceStatID" asp-route-model="ServiceStats" asp-route-title="Title"
                                                               asp-route-desc="" asp-route-cont="" asp-route-view="ContentManagement" class="text-decoration-none text-info">
                                                                <i class="align-middle" data-feather="globe"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <div class="alert alert-primary alert-dismissible" role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            <div class="alert-message">
                                                <strong>No page sections added</strong>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                            <form asp-action="NewServiceStat" asp-controller="Admin" id="ServiceStatForm" method="post" class="g-3 needs-validation" novalidate>
                                <h3>Add Service Stat</h3>
                                <div class="mb-3">
                                    <label class="form-label" for="Title" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide service name">
                                        Name
                                    </label>
                                    <input type="text" class="form-control count-reach" name="Title" id="Title" maxlength="250" data-chars-max="250" data-msg-color="danger" placeholder="Title" required="">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="StatsValue" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide service stat value, like numbers">
                                        Stat Value
                                    </label>
                                    <input type="text" class="form-control count-reach" name="StatValue" id="StatValue" maxlength="10" data-chars-max="10" data-msg-color="danger" placeholder="e.g 21" required="">
                                </div>
                                <div class="mb-3">
                                    <small class="float-right">
                                        <a href="https://icons.getbootstrap.com/" target="_blank">
                                            Icons
                                        </a>
                                    </small>
                                    <label class="form-label" for="Icon" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide service icon (optional)">
