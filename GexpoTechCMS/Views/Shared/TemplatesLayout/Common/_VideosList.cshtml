@model IEnumerable<GexpoTechCMS.Models.AppModels.VideosModel>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using NgoExpoApp.App_Code

@{
    string SessionLanguage = Helpers.DefaultData(HttpContextAccessor.HttpContext.Session.GetString("_SessionLanguage"), "en");

}

    <!-- ======= Videos Section ======= -->
    <section id="videos" class="videos">
        <div class="container" data-aos="fade-up">

            <div class="section-title mt-3">
                <h2>Videos</h2>
            </div>

            <div class="row" data-aos="fade-up" data-aos-delay="200">

                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-12 col-md-6 col-lg-4 mb-2">
                            <div class="card">
                                <div class="card-header" style="min-height: 4em;">
                                    <h6>@Helpers.FormatLongText(item.VideoTitle, 80)</h6>
                                </div>
                                <div class="card-body" style="min-height: 15em;">
                                    <div class="embed-responsive embed-responsive-16by9">
                                        <iframe class="embed-responsive-item w-100" style="height:14em;" src="https://www.youtube.com/embed/@Helpers.GetYouTubeVideoID(item.VideoLink)" allowfullscreen></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <paging total-records="ViewBag.TotalRecords"
                            page-no="ViewBag.PageNo"
                            page-size="ViewBag.PageSize"
                            show-prev-next="true"
                            show-first-last="true"
                            show-total-pages="false"
                            show-total-records="false"
                            show-page-size-nav="true"
                            show-gap="true">
                    </paging>
                </div>
            </div>

        </div>
    </section>
    <!-- End Portfolio Section -->