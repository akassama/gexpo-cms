@model IEnumerable<GexpoTechCMS.Models.AppModels.TeamModel>
@using NgoExpoApp.App_Code

@{
    ViewData["Title"] = "Email Subscribers";

    //used to enable admin sidebar
    ViewBag.LoggedInPage = "true";

    //used for setting breadcrumb
    ViewData["BreadCrumb-0"] = "Administration";
    ViewData["BreadCrumb-0-Text"] = "Administration";
    ViewData["BreadCrumb-1"] = null;
    ViewData["BreadCrumb-1-Text"] = null;

    //used for setting active left sidebar
    ViewBag.ActiveTab = "Administration";
}

<div class="container-fluid p-0">

    <!-- ADMIN SCRIPTS -->
    <partial name="~/Views/Shared/AccountLayout/_AdminScript.cshtml" />

    <!-- SEARCH RESULT DIV -->
    <partial name="~/Views/Shared/AccountLayout/_AdminSearchList.cshtml" />

    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3><strong>Email Subscribers</strong></h3>
        </div>

        <!-- BREADCRUMB RECENT VISITS -->
        <partial name="~/Views/Shared/AccountLayout/_Breadcrumbs.cshtml" />
    </div>

    <!-- Action messages partial -->
    <partial name="~/Views/Shared/_ProcessMessage.cshtml" />

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Email Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EmailSubscribers" asp-controller="Admin" class="g-3 needs-validation" novalidate enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide subject">
                                Subject
                            </label>
                            <input type="text" class="form-control count-reach" maxlength="250" data-chars-max="250" data-msg-color="danger" name="Subject" id="Subject" placeholder="Subject" required="">
                            <div class="invalid-feedback">
                                Please provide a subject.
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(ViewBag.SubscriberEmail))
                        {
                            <div class="mb-3">
                                <label class="form-label" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Provide subject">
                                    To Email
                                </label>
                                <input type="email" class="form-control count-reach" maxlength="250" data-chars-max="250" data-msg-color="danger" name="Email" id="Email" value="@ViewBag.SubscriberEmail" required="" readonly>
                            </div>
                        }
                        <div class="mb-3">
                            <label class="form-label" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Email message">
                                Message
                            </label>
                            <textarea type="text" class="form-control text-editor" name="Message" id="Message" required=""></textarea>
                            <div class="invalid-feedback">
                                Please provide a message.
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">
                            <i class="align-middle" data-feather="corner-up-right"></i> Send
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ADMIN MODALS -->
<partial name="~/Views/Shared/AccountLayout/_AdminModals.cshtml" />