@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using NgoExpoApp.App_Code

@{
    string SessionLanguage = Helpers.DefaultData(HttpContextAccessor.HttpContext.Session.GetString("_SessionLanguage"), "en");

    string ServicesHeaderID = SqlHelpers.GetTableData("ContentManagement", "ContentName", "Services", "ContentID");
    string ServicesHeader = SqlHelpers.GetTableData("ContentManagement", "ContentName", "Services", "ContentValue");
}

@if (CMSHelpers.ContentDisplay("Services"))
{
    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container-fluid">

            <div class="section-title">
                <h2>Services</h2>
                <h3>
                    @Helpers.GetTranslatableData(ServicesHeader, SessionLanguage, ServicesHeaderID, "ContentManagement", "Description")
                </h3>
            </div>

            <div class="row justify-content-center">
                <div class="col-xl-10">
                    <div class="row">
                        @HidayahTemplateHelpers.GetServices(SessionLanguage)
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- End Services Section -->
}
